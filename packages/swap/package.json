{
  "name": "swap",
  "version": "0.0.21",
  "description": "Swap service backend",
  "private": true,
  "scripts": {
    "build": "pnpm clean && prisma generate && tsc && tsc-alias",
    "clean": "rm -rf dist",
    "dev": "tsx watch -r envlocker/config src/index.ts",
    "dev:berghain": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=berghain pnpm dev",
    "dev:perseverance": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=perseverance pnpm dev",
    "dev:sisyphos": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=sisyphos pnpm dev",
    "dev:backspin": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=backspin pnpm dev",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "start": "node dist/swap/src/index.js",
    "test:ci": "CI=1 jest --runInBand --forceExit",
    "test": "jest --runInBand",
    "eslint:check": "pnpm eslint --max-warnings 0 './**/*.ts'",
    "prettier:base": "prettier ./** --ignore-path=../../.prettierignore",
    "prettier:check": "pnpm prettier:base --check",
    "prettier:write": "pnpm prettier:base --write",
    "typecheck": "tsc --noEmit",
    "generate:models": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate": "prisma migrate",
    "graphql:codegen": "graphql-codegen --config .graphqlrc.js"
  },
  "keywords": [
    "typescript"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/client-preset": "^4.2.5",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.5",
    "@types/graphql-fields": "^1.3.9",
    "@types/qs": "^6.9.14",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.12",
    "eslint-plugin-n": "^17.10.1",
    "graphql": "^16.9.0",
    "prisma": "^5.18.0",
    "socket.io-client": "^4.7.5",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": "22.3.0",
    "pnpm": ">=9"
  },
  "dependencies": {
    "@chainflip/processor": "^1.4.9",
    "@chainflip/rpc": "^1.5.5",
    "@chainflip/utils": "^0.4.0",
    "@polkadot/api": "^12.2.3",
    "@polkadot/types": "^11.0.2",
    "@prisma/client": "^5.18.0",
    "axios": "^1.7.4",
    "bignumber.js": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "elliptic-sdk": "^0.7.2",
    "ethers": "^6.13.2",
    "express": "^4.19.2",
    "graphql-request": "^6.1.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "qs": "^6.12.0",
    "rxjs": "^7.8.1",
    "safe-stable-stringify": "^2.4.3",
    "socket.io": "^4.7.5",
    "winston": "^3.13.1",
    "ws": "^8.18.0"
  }
}
