{
  "name": "swap",
  "version": "0.0.21",
  "description": "Swap service backend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm clean && prisma generate && tsc && tsc-alias",
    "clean": "rm -rf dist",
    "dev": "tsx watch -r envlocker/config src/index.ts",
    "dev:berghain": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=berghain pnpm dev",
    "dev:perseverance": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=perseverance pnpm dev",
    "dev:sisyphos": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=sisyphos pnpm dev",
    "dev:backspin": "START_PROCESSOR=TRUE START_HTTP_SERVICE=TRUE ENVLOCKER_ENV_NAME=backspin pnpm dev",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "start": "dotenvx run -- node dist/packages/swap/src/index.js",
    "test:ci": "CI=1 pnpm test",
    "test": "vitest --no-file-parallelism",
    "eslint:check": "pnpm eslint --max-warnings 0 './**/*.ts'",
    "prettier:base": "prettier ./** --ignore-path=../../.prettierignore",
    "prettier:check": "pnpm prettier:base --check",
    "prettier:write": "pnpm prettier:base --write",
    "typecheck": "tsc --noEmit",
    "generate:models": "prisma generate",
    "migrate:deploy": "dotenvx run -- prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "migrate": "prisma migrate",
    "graphql:codegen": "graphql-codegen --config .graphqlrc.ts"
  },
  "keywords": [
    "typescript"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@dotenvx/dotenvx": "^1.44.1",
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/client-preset": "^4.8.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/graphql-fields": "^1.3.9",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint-plugin-n": "^17.18.0",
    "graphql": "^16.11.0",
    "prisma": "^6.8.2",
    "socket.io-client": "^4.7.5",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": "22.3.0",
    "pnpm": ">=9"
  },
  "dependencies": {
    "@chainflip/bitcoin": "^1.2.5",
    "@chainflip/processor": "~1.10.0",
    "@chainflip/redis": "^1.0.2",
    "@chainflip/rpc": "~1.9.7",
    "@chainflip/solana": "^2.1.9",
    "@chainflip/utils": "^0.8.7",
    "@polkadot/api": "^15.10.2",
    "@polkadot/types": "^15.10.2",
    "@prisma/client": "^6.8.2",
    "@trpc/server": "^10.45.2",
    "axios": "^1.9.0",
    "bignumber.js": "^9.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.1",
    "express": "^4.21.1",
    "graphql-request": "^7.1.2",
    "ioredis": "^5.6.1",
    "pg": "^8.16.0",
    "rxjs": "^7.8.2",
    "safe-stable-stringify": "^2.5.0",
    "socket.io": "^4.8.1",
    "superjson": "^1.13.3",
    "winston": "^3.15.0",
    "ws": "^8.18.2"
  }
}
